<div id="show">
	<% if @game.in_session == false %>
	  <%= render "loading" %>
	<% else %>
	 <%= render "inplay" %>
	<% end %>

<!-- Table of players -->
<div id="player-table">
		<table id="players" class="table">
			<thead>
				<tr>
					<td>Player Name</td>
					<td>Score</td>
				</tr>
			</thead>
			<tbody>
				<% @game.players.each do |player| %>
					<tr><td><%= player.user.name %></td><td><%= player.score %></td></tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<form action="/players/<%= @current_player.id %>/" method="post">
	<input type="hidden" name="_method" value="delete">
	<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
	<button class="btn btn-primary">Leave Game</button>
</form>

